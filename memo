# bundle
gem update bundle
bundle config set path
bundle update --bundler

# run
bundle exec rerun -- rackup
curl -L 0:9292

# heroku
npm install -g heroku
heroku login -i
heroku create
git push heroku master

# fix
vi features/step_definitions/game_steps.rb

# cucumber
cucumber features/start_new_game.feature
vi views/new.erb
cucumber features/guess.feature
vi app.rb
